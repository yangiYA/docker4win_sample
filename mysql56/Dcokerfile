FROM mysql:5.6
# https://github.com/docker-library/mysql/blob/master/5.6/Dockerfile

MAINTAINER yhj

EXPOSE                  '3306'
ENV MYSQL_ROOT_USER     root
ENV MYSQL_ROOT_PASSWORD pass
ENV MYSQL_DATABASE      hogedb
ENV MYSQL_USER          my_user
ENV MYSQL_PASSWORD      my_pass

#VOLUME .mydocker/mysql/init.d:/docker-entrypoint-initdb.d
